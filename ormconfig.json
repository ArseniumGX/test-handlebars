{
    "type": "mongodb",
    "url": "mongodb://localhost:3007/blog",
    "host": "localhost",
    "port": 3007,
    "database": "blog",
    "synchronize": true,
    "useUnifiedTopology": true,
    "entities": ["src/models/**/*.ts"],
